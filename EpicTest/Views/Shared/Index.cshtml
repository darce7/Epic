@{
    ViewData["Title"] = "Home Page";
}

@model List<Product>;
@using System.Data;

<div class="text-left">
    <h1 class="display-4">Products</h1>
</div>
<div class="container">
    <br />
    <div style="width:90%; margin:0 auto;">
        <table id="products" class="table table-striped table-bordered" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>@Html.ActionLink("Name", "Index", new { sortOrder = "name" })</th>
                    <th>@Html.ActionLink("Price", "Index", new { sortOrder = "price" })</th>
                    <th>@Html.ActionLink("Quantity", "Index", new { sortOrder = "qty" })</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Product product in Model.Take(5))
                {
                <tr class="@product.Class">
                    <td>@product.Name</td>
                    <td>$@string.Format("{0:#.00}", product.Price)</td>
                    <td>@product.Quantity</td>
                </tr>

                }
            </tbody>
        </table>
    </div>
</div>
